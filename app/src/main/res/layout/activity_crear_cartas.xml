<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cartas.crearCartas">

    <ImageView
        android:id="@+id/crearCarta_plantilla"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="30dp"
        android:adjustViewBounds="true"
        android:src="@drawable/cartamagicplantilla"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/crearCarta_imagen"
        android:layout_width="0dp"
        android:layout_height="187dp"
        android:layout_margin="27dp"
        android:scaleType="centerCrop"
        app:layout_constraintVertical_bias="0.31"
        app:layout_constraintBottom_toBottomOf="@+id/crearCarta_plantilla"
        app:layout_constraintEnd_toEndOf="@+id/crearCarta_plantilla"
        app:layout_constraintStart_toStartOf="@+id/crearCarta_plantilla"
        app:layout_constraintTop_toTopOf="@+id/crearCarta_plantilla"
        tools:srcCompat="@tools:sample/avatars" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/crearCarta_til_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/crearCarta_plantilla"
        app:layout_constraintEnd_toEndOf="@+id/crearCarta_imagen"
        app:layout_constraintStart_toStartOf="@+id/crearCarta_imagen"
        app:layout_constraintTop_toTopOf="@+id/crearCarta_plantilla"
        app:layout_constraintVertical_bias="0.16">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/crearCarta_tiet_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Titulo" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/crearCarta_til_categoria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/crearCarta_plantilla"
        app:layout_constraintEnd_toEndOf="@+id/crearCarta_imagen"
        app:layout_constraintStart_toStartOf="@+id/crearCarta_imagen"
        app:layout_constraintTop_toTopOf="@+id/crearCarta_plantilla"
        app:layout_constraintVertical_bias="0.57">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/crearCarta_tiet_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Categoría" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/crearCarta_til_descripcion"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="@+id/crearCarta_imagen"
        app:layout_constraintStart_toStartOf="@+id/crearCarta_imagen"
        app:layout_constraintTop_toBottomOf="@id/crearCarta_til_categoria">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/crearCarta_tiet_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/creacrCarta_boton_crear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear"
        app:layout_constraintBottom_toBottomOf="@+id/crearCarta_plantilla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>