<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cartas.ModificarCarta">

    <TextView
        android:id="@+id/modificarCarta_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar carta"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/modificarCarta_imagen"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/archivovacio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modificarCarta_titulo" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/modificarCarta_til_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@+id/modificarCarta_imagen"
        app:layout_constraintStart_toStartOf="@+id/modificarCarta_imagen"
        app:layout_constraintTop_toBottomOf="@+id/modificarCarta_imagen">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/modificarCarta_tiet_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título" />

        <Spinner
            android:id="@+id/modificarCarta_spinner_categoria"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/modificarCarta_til_categoria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/modificarCarta_imagen"
        app:layout_constraintStart_toStartOf="@+id/modificarCarta_imagen"
        app:layout_constraintTop_toBottomOf="@+id/modificarCarta_til_titulo" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/modificarCarta_til_descripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="@+id/modificarCarta_imagen"
        app:layout_constraintStart_toStartOf="@+id/modificarCarta_imagen"
        app:layout_constraintTop_toBottomOf="@+id/modificarCarta_til_titulo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/modificarCarta_tiet_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción"
            android:inputType="textMultiLine" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/modificarCarta_boton_guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar cambios"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>