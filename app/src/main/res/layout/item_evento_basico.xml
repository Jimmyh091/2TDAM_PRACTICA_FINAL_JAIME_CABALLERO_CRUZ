<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/itemEventoBasico_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/itemEventoBasico_foto"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/itemEventoBasico_nombre"
        app:layout_constraintStart_toStartOf="@+id/itemEventoBasico_nombre"
        app:layout_constraintTop_toBottomOf="@+id/itemEventoBasico_nombre"
        android:src="@drawable/archivovacio" />

</androidx.constraintlayout.widget.ConstraintLayout>