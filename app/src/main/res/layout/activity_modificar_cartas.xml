<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cartas.modificarCartas">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Modificar carta"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="@+id/modificarCarta_plantilla" />

    <ImageView
        android:id="@+id/modificarCarta_plantilla"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="30dp"
        android:adjustViewBounds="true"
        android:src="@drawable/cartamagicplantilla"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/modificarCarta_imagen"
        android:layout_width="0dp"
        android:layout_height="187dp"
        android:layout_margin="27dp"
        app:layout_constraintVertical_bias="0.31"
        app:layout_constraintBottom_toBottomOf="@+id/modificarCarta_plantilla"
        app:layout_constraintEnd_toEndOf="@+id/modificarCarta_plantilla"
        app:layout_constraintStart_toStartOf="@+id/modificarCarta_plantilla"
        app:layout_constraintTop_toTopOf="@+id/modificarCarta_plantilla"
        android:src="@drawable/archivovacioblanco" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/modificarCarta_til_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/modificarCarta_plantilla"
        app:layout_constraintEnd_toEndOf="@+id/modificarCarta_imagen"
        app:layout_constraintStart_toStartOf="@+id/modificarCarta_imagen"
        app:layout_constraintTop_toTopOf="@+id/modificarCarta_plantilla"
        app:layout_constraintVertical_bias="0.16">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/modificarCarta_tiet_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/modificarCarta_til_categoria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/modificarCarta_plantilla"
        app:layout_constraintEnd_toEndOf="@+id/modificarCarta_imagen"
        app:layout_constraintStart_toStartOf="@+id/modificarCarta_imagen"
        app:layout_constraintTop_toTopOf="@+id/modificarCarta_plantilla"
        app:layout_constraintVertical_bias="0.57">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/modificarCarta_tiet_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Categoría" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/modificarCarta_til_descripcion"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="@+id/modificarCarta_imagen"
        app:layout_constraintStart_toStartOf="@+id/modificarCarta_imagen"
        app:layout_constraintTop_toBottomOf="@id/modificarCarta_til_categoria">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/modificarCarta_tiet_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/modificarCarta_boton_guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar cambios"
        app:layout_constraintBottom_toBottomOf="@+id/modificarCarta_plantilla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>