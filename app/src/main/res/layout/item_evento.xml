<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:id="@+id/itemEvento_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/itemEvento_foto"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/itemEvento_nombre"
        app:layout_constraintStart_toStartOf="@+id/itemEvento_nombre"
        app:layout_constraintTop_toBottomOf="@+id/itemEvento_nombre"
        android:src="@drawable/archivovacio" />

    <Button
        android:id="@+id/itemEvento_boton_comprar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comprar"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/itemEvento_foto"
        app:layout_constraintStart_toStartOf="@+id/itemEvento_foto"
        app:layout_constraintTop_toBottomOf="@+id/itemEvento_foto" />
</androidx.constraintlayout.widget.ConstraintLayout>