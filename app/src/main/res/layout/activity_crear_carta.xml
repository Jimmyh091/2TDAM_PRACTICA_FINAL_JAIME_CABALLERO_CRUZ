<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cartas.CrearCarta">

    <!-- Banner -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/crearCarta_banner"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/rojoclaro"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/crearCarta_banner_atras"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:layout_margin="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/atras" />

        <ImageView
            android:id="@+id/crearCarta_banner_logo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="18dp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/magic" />

        <ImageView
            android:id="@+id/crearCarta_banner_fotoPerfil"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/archivovacio" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/crearCarta_banner">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/crearCarta_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear carta"
                android:layout_marginTop="30dp"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/crearCarta_imagen"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/archivovacio"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/crearCarta_titulo" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/crearCarta_til_titulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:layout_constraintEnd_toEndOf="@+id/crearCarta_imagen"
                app:layout_constraintStart_toStartOf="@+id/crearCarta_imagen"
                app:layout_constraintTop_toBottomOf="@+id/crearCarta_imagen">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/crearCarta_tiet_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Título" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/crearCarta_titulo_categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoría"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@+id/crearCarta_til_titulo"
                app:layout_constraintTop_toBottomOf="@+id/crearCarta_til_titulo" />

            <Spinner
                android:id="@+id/crearCarta_spinner_categoria"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="@+id/crearCarta_til_titulo"
                app:layout_constraintStart_toStartOf="@+id/crearCarta_titulo_categoria"
                app:layout_constraintTop_toBottomOf="@+id/crearCarta_titulo_categoria" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/crearCarta_til_descripcion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="@+id/crearCarta_imagen"
                app:layout_constraintStart_toStartOf="@+id/crearCarta_imagen"
                app:layout_constraintTop_toBottomOf="@+id/crearCarta_spinner_categoria">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/crearCarta_tiet_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Descripción"
                    android:inputType="textMultiLine" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/crearCarta_til_precio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/crearCarta_til_descripcion"
                app:layout_constraintStart_toStartOf="@+id/crearCarta_til_descripcion"
                app:layout_constraintTop_toBottomOf="@+id/crearCarta_til_descripcion">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/crearCarta_tiet_precio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Precio"
                    android:inputType="numberDecimal" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/crearCarta_til_stock"
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/crearCarta_til_precio"
                app:layout_constraintStart_toStartOf="@+id/crearCarta_til_precio"
                app:layout_constraintEnd_toEndOf="@+id/crearCarta_til_precio">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/crearCarta_tiet_stock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Stock" />
            </com.google.android.material.textfield.TextInputLayout>

            <Space
            android:id="@+id/crearCarta_espacio"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/crearCarta_til_stock" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/crearCarta_boton_crear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear carta"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
